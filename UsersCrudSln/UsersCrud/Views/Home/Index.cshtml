@model IEnumerable<UsersCrud.Models.Contacto>
@{
    ViewData["Title"] = "Lista de Contactos";
}

<div class="text-center">
    <h1>Contacto con .NET 8 MVC</h1>    
</div>

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Home" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa fa-plus" aria-hidden="true"></i> Nuevo Usuario
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Lista de Contactos</strong></h3>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tablaUsuarios" width="100%" cellpadding="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.ContactoId)</th>
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th>@Html.DisplayNameFor(m => m.TelefonoMovil)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>@Html.DisplayNameFor(m => m.FechaCreacion)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach( var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(Model => item.ContactoId)</td>
                                        <td>@Html.DisplayFor(Model => item.Nombre)</td>
                                        <td>@Html.DisplayFor(Model => item.Telefono)</td>
                                        <td>@Html.DisplayFor(Model => item.TelefonoMovil)</td>
                                        <td>@Html.DisplayFor(Model => item.Email)</td>
                                        <td>@Html.DisplayFor(Model => item.FechaCreacion)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.ContactoId"><i class="fa fa-pencil" aria-hidden="true"></i> Editar</a>
                                            <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.ContactoId"><i class="fa fa-info-circle" aria-hidden="true"></i> Contato Info</a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.ContactoId"><i class="fa fa-eraser" aria-hidden="true"></i> Borrar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>