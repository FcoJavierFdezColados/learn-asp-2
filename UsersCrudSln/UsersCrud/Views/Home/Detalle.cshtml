@model UsersCrud.Models.Contacto
@{
	ViewData["Title"] = "Info Contacto";
}

<div class="text-center">
	<h1>Contacto con .NET 8 MVC</h1>
</div>

<div class="row">
	<div class="offset-12">
		<div class="card border">
			<div class="card-header bg-dark">
				<h3 class="text-white"><strong>Información del Contacto</strong></h3>
			</div>

			<div class="card-body">
				
				<ul class="list-group">
					<li class="list-group-item">
						<strong>Nombre: </strong>@Html.DisplayFor(model => model.Nombre)
					</li>
					<li class="list-group-item">
						<strong>Teléfono: </strong>@Html.DisplayFor(model => model.Telefono)
					</li>
					<li class="list-group-item">
						<strong>Teléfono Móvil: </strong>@Html.DisplayFor(model => model.TelefonoMovil)
					</li>
					<li class="list-group-item">
						<strong>Email: </strong>@Html.DisplayFor(model => model.Email)
					</li>
					<li class="list-group-item">
						<strong>Fecha de creación: </strong>@Html.DisplayFor(model => model.FechaCreacion)
					</li>
					
				</ul>

				<a asp-controller="Home" asp-action="Index">Volver</a>
			</div>
		</div>
	</div>
</div>
